{
  "alertingProfiles": [
    {
      "displayName": "Observability Demo - Production Alerts",
      "id": "OBSERVABILITY_DEMO_PROD",
      "rules": [
        {
          "type": "APPLICATION",
          "enabled": true,
          "conditions": [
            {
              "key": "RESPONSE_TIME",
              "comparisonInfo": {
                "type": "BASELINE",
                "comparison": "GREATER",
                "value": 2.0,
                "negate": false
              }
            }
          ],
          "delayInMinutes": 0,
          "includeMode": "INCLUDE_ALL",
          "tagFilter": {
            "includeMode": "INCLUDE_ALL",
            "tagFilters": [
              {
                "context": "CONTEXTLESS",
                "key": "Environment",
                "value": "Production"
              }
            ]
          }
        },
        {
          "type": "APPLICATION",
          "enabled": true,
          "conditions": [
            {
              "key": "FAILURE_RATE",
              "comparisonInfo": {
                "type": "BASELINE",
                "comparison": "GREATER",
                "value": 5.0,
                "negate": false
